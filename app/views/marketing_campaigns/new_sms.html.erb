<script type="text/javascript" charset="utf-8">    var max_characters = 136;    function updateCountCharacters(value){         if (value.length > max_characters)             $('#marketing_campaign_sms_content').val(value.substr(0, max_characters));         $(".count").html((max_characters) - $('#marketing_campaign_sms_content').val().length);    }$(document).ready(function(){        $('#marketing_campaign_sms_content').on('paste change keyup keypress',function(ev){            var value = ev.target.value;            var val;            var proibited =     ['á','ç','Á','Ç','²','³','À','Ò','Ó','Ô','Õ','·','â','ã','Ù','Ú','Û','ê','ë','ú','û','Ý','ý','í','î','Ì','Í','Î','Ï','ï','ÿ','Ÿ','Þ','þ','¯','×','`','¢','Š','©','ª','«','»','¬','®','°','±','A?','¹','º','Œ','Â','Ã','È','Ê','Ë','Ð','ð','ó','ô','õ',"÷"];            var replacements =  ['a','c','A','C','2','3','A','O','O','O','O','.','a','a','U','U','U','e','e','u','u','Y','y','i','i','I','I','I','I','i','y','Y','p','P','-','x',' ','c','S','c','a','<','>',' ','r',' ',' ','A ','1','0','C','A','A','E','E','E','D','o','o','o','o',"/"];            $.each(proibited, function(i, char){                if(ev.target.value.indexOf(char) > 0){                    val = ev.target.value;                    val = val.replaceAt(val.indexOf(char),replacements[i]);                }                });            if(typeof(val) !== 'undefined') $('#marketing_campaign_sms_content').val(val);            updateCountCharacters(value);            });        $('.partial').hide();                  $("input[name='people_list[type]']").change(function(){            $('.partial').hide();            var val = $(this).val();            if(val == 'PeopleList'){                $('#consumers.partial').show();            } else if(val == 'PeopleListBond') {                $('#bonds.partial').show();            } else if(val == 'PeopleListInterest'){                $('#interests.partial').show();            }        });});</script><div id='create_wrapper'>    <div id='sidebar'>            </div>        <div id='content-wrapper'>            <%= form_for @campaign, url: marketing_campaigns_path, method: 'post' do |f|  %>                <div class='form-control-wrapper'>                    <%= f.label :title, "Titulo da Campanha" %>                    <%= f.text_field :title, class: 'form-control' %>                    <br />                    <%= f.label :sms_content, 'Conteúdo do SMS' %>                    <p class='text-primary'><span class='count'>130</span> carácteres restantes(qualquer tipo de acentuação será substituida automaticamente)</p>                    <%= f.text_area :sms_content, class: 'form-control', style: 'height:200px;' %>                </div>                 <%= fields_for :people_list do |p| %>                            <br />                            <br />                            <div class='jumbotron'>                                <h2>Tipos de destinatários</h2>                                <%= p.collection_radio_buttons :type, [['PeopleList', 'Lista de pessoas'],['PeopleListBond','Vinculos'],['PeopleListInterest','Interesses']], :first,:last do |b| %>                                    <div class='radio radio-primary'>                                        <%= b.label { b.radio_button + b.text } %>                                    </div>                                <% end %>                            </div>                        <div id='choice-wrapper'>                            <div class='partial' id='consumers'>                                <%= render partial: 'marketing_campaigns/forms/choice_consumers', :locals => { :p  => p} %>                                </div>                            <div class='partial' id='bonds'>                                <%= render partial: 'marketing_campaigns/forms/choice_bonds', :locals => { :p  => p} %>                                </div>                            <div class='partial' id='interests'>                                <%= render partial: 'marketing_campaigns/forms/choice_interests', :locals => { :p  => p} %>                                </div>                        </div>                <% end %>              <%= f.submit 'Enviar campanha',class: 'btn btn-info',id: 'sent-campaign',data: { :loading_text => "Salvando e enviando campanha.." } %>              <%= f.hidden_field :type, :value => "MarketingCampaignSms"%>            <% end  %>    </div></div>