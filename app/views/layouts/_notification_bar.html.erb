
<% if flash[:alert].present? %>
    <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4>Atenção</h4>
        <p>
            <%= flash[:alert]  %>
        </p>
    </div>
<% elsif flash[:notice].present? %>
    <div class="alert alert-dismissable alert-sucess">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <p><%= flash[:notice]  %></p>
    </div>
<% end %>

