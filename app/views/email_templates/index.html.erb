<h1>Templates de email</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @email_templates.each do |email_template| %>
      <tr>
        <td>Nome</td>
        <td><%= link_to 'Mostrar', email_template,class: 'btn-sm btn-info'  %></td>
        <td><%= link_to 'Editar', edit_email_template_path(email_template),class: 'btn-sm btn-info'  %></td>
        <td><%= link_to 'Excluir', email_template, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn-sm btn-info'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo template de email', new_email_template_path, class: 'btn btn-success' %>
