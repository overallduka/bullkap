<script type="text/javascript">
  
  $(document).ready(function(){
    $("#person_phone_number,#person_cell_number").focus(function () {
      $(this).mask("(99) 9999-9999?9");
    });

    $("#person_phone_number,#person_cell_number").focusout(function () {
      var phone, element;
      element = $(this);
      element.unmask();
      phone = element.val().replace(/\D/g, '');
      if (phone.length > 10) {
      element.mask("(99) 99999-999?9");
      } else {
      element.mask("(99) 9999-9999?9");
      }
   });

  })
</script>

