<h4 class='text-center'>Vinculos com a universidade</h4>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3" width='200'></th>
    </tr>
  </thead>

  <tbody>
    <% @bonds.each do |bond| %>
      <tr>
        <td><%= bond.name %></td>
        <td><%= link_to 'detalhes', bond, class: 'btn-sm btn-info' %></td>
        <td><%= link_to 'editar', edit_bond_path(bond), class: 'btn-sm btn-info' %></td>
        <td><%= link_to 'excluir', bond, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn-sm btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo vinculo', new_bond_path, class: 'btn btn-success' %>
