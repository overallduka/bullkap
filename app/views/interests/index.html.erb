<h4 class='text-center'>Interesses</h4>
<%= link_to 'Novo interesse', new_interest_path, class: 'btn btn-success' %>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.name %></td>
        <td><%= link_to 'detalhes', interest, class: 'btn-sm btn-info' %></td>
        <td><%= link_to 'editar', edit_interest_path(interest), class: 'btn-sm btn-info'%></td>
        <td><%= link_to 'excluir', interest, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-info'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

