<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name),class:"btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%#= link_to "Cadastrar", new_registration_path(resource_name),class:"btn btn-link"  %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu sua senha ?", new_password_path(resource_name) ,class:"btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Você recebeu instruções com a senha ?", new_confirmation_path(resource_name) ,class:"btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Você não recebeu as instruções de cadastro ?", new_unlock_path(resource_name) ,class:"btn btn-link" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Entrar com o #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) ,class:"btn btn-link" %><br />
  <% end -%>
<% end -%>
